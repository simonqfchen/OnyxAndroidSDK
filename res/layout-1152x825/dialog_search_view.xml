<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:paddingBottom="15dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/imagebutton_all"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/reader_menu_item_background"
            android:contentDescription="@drawable/ic_secarch_dialog_view_secarch_all"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_secarch_dialog_view_secarch_all" />

        <ImageButton
            android:id="@+id/imagebutton_backward"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/reader_menu_item_background"
            android:contentDescription="@drawable/ic_secarch_dialog_view_backward"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_secarch_dialog_view_backward" />

        <ImageButton
            android:id="@+id/imagebutton_forward"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/reader_menu_item_background"
            android:contentDescription="@drawable/ic_secarch_dialog_view_forward"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_secarch_dialog_view_forward" />

        <ImageButton
            android:id="@+id/imagebutton_dismiss"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/reader_menu_item_background"
            android:contentDescription="@drawable/ic_secarch_dialog_view_dismiss"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_secarch_dialog_view_dismiss" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_page"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="#00FFFFFF"
        android:ellipsize="middle"
        android:gravity="bottom|left"
        android:singleLine="true"
        android:layout_toRightOf="@id/imagebutton_dismiss"
        android:textColor="#000000"
        android:textSize="20sp" />

</RelativeLayout>